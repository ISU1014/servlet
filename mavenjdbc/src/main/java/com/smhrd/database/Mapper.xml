<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "mybatis-3-mapper.dtd" >
  <!-- namespace : sql태그 id를 그룹화하기 위한 속성 
  					Mapper의 경로 작성
  -->
<mapper namespace="com.smhrd.database.Mapper">

<!-- sql문을 태그 단위 정리 
	resultType : sql문의 결과물 타입 : com.smhrd.model.member.VO, String, Int
	parameterType : sql문 돌려줄때 넣어줄 값 : com.smhrd.model.memberVO, Int
	바인드변수(?)와 같은 역할로 #{객체의 필드명}
	주의할 점~~) Mybatis는 객체의 필드명에 언더바(_)가 있으면 매칭을 못시킴
	주의할 점~~) 객체의 필드명 == 컬럼명 매칭하기 쉬움
	주의할 점~~) 안쓰는 sql태그는 삭제! 남아있는것만으로도 오류 생성
	주의할 점~~) SQL문 적고 세미콜론 쓰지 않기!!
	-->
	<insert id="insertMember" parameterType = "com.smhrd.domain.member_web">
		insert into member_web values (#{id},#{pw},#{nick})	
	</insert>
 	
 	<!-- member_web객체에서 1개 or 2.. 몇개를 담든지 담아주는 개체의 형태는 같음 
 		기존의 JDBC에서는 select의 결과값 : resultSet 여러개의 데이터를 돌려주는
 		데이터를 돌려주는 SQL문이어도 객체 형태로 담음-->
 	<select id="selectMember" parameterType="com.smhrd.domain.member_web" resultType="com.smhrd.domain.member_web"> 	
 	select * from memebr_web where id=#{id} and pw=#{pw}
 	</select>
 	
 	
 	
 	
 	
 	
 	
 	
 	
 	
 	
 	
 	
 	
</mapper>